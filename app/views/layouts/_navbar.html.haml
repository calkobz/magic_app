%nav.top-bar{data: {topbar: true} }
  %ul.title-area
    %li.name
      %h1= link_to "My App", root_path
    %li.toggle-topbar.menu-icon= link_to "Menu", "#"

  %section.top-bar-section
    %ul.right
      %li{class: current_page?(about_path) && "active" }
        = link_to "About", about_path
      - if signed_in?
        %li.has-dropdown
          = link_to truncate(current_user.name, length: 13), "#"
          %ul.dropdown
            %li{class: current_page?(current_user) && "active"}= link_to "Profile", current_user
            %li{class: current_page?("#") && "active"}= link_to "Settings", "#"
            %li{class: current_page?(signin_path) && "active"}= link_to "Sign out", signout_path, method: "delete"
      - else
        %li.has-dropdown
          = link_to "User", "#"
          %ul.dropdown
            %li{class: current_page?(signup_path) && "active" }= link_to "Sign up", signup_path
            %li{class: current_page?(signin_path) && "active" }= link_to "Sign in", signin_path
